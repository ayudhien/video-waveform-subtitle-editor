<section class="media-upload">
  <form method="POST" action="/media/" encType="multipart/form-data">
    <fieldset>
      <legend>Video Input</legend>
      <label for="video">Local Video</label>
      <input type="file" name="video" id="video">
      <label for="ytUri">YouTube Video</label>
      <input type="text" name="ytUri" id="ytUri">
    </fieldset>
    <fieldset>
      <legend>Subtitle File</legend>
      <label for="srt">SRT</label>
      <input type="file" name="srt" id="srt">
    </fieldset>
    <input type="submit" value="Submit" class="btn">
  </form>
</section>
